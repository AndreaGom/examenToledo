{{> header}}
<div class="container">
   
    <h1>Lista de Pintores</h1>
    {{#if pintores }}
    <table class="table table-dar table-hover">
        <thead>
        <tr>
            <td>ID</td>
            <th>Nombre</th>
            <th>Nacionalidad</th>
            <th>Corriente</th>
            <th>Imagen</th>
           
        </tr>
        </thead>
        <tbody>
        {{#each pintores }}
        <tr>
            <td>{{ _id }}</td>
            <td>{{nombre}}</td>
            <td>{{nacionalidad}}</td>
            <td>{{corriente}}</td>
            <td><img src="../images/{{pintura}}"></td>
            
        </tr>
        {{/ each }}
        </tbody>
    </table>
    {{ else }}
    <div>No se encontraron Pintores.</div>
    {{/if}}
</div>
{{> footer}}